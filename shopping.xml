<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shopping">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="72dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/byCategoryTopMenu"
            android:layout_width="130dp"
            android:layout_height="72dp"
            android:text="Shop By Category"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/fullInventoryTopMenu"
            android:layout_width="130dp"
            android:layout_height="72dp"
            android:text="Full Inventory"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/byStoreTopMenu"
            android:layout_width="130dp"
            android:layout_height="72dp"
            android:text="Shop By Store"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <fragment
        android:id="@+id/fragments"
        android:name="ryan.android.shopping.ShopByStore"
        android:layout_width="400dp"
        android:layout_height="526dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>