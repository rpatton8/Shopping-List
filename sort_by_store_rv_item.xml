<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="6dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/triangleButtonRight"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@mipmap/triangle_right"
        android:visibility="visible" />

    <Button
        android:id="@+id/triangleButtonDown"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@mipmap/triangle_down"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/itemSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_outline_unselected"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/itemSmallName"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Peanuts"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/itemSmallInStock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:fontFamily="@font/bebas_regular"
            android:text="@string/inStock"
            android:textAlignment="viewEnd"
            android:textColor="#00E432"
            android:textSize="28sp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/itemSmallNeeded"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:fontFamily="@font/bebas_regular"
            android:text="@string/needed"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/holo_red_light"
            android:textSize="28sp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/itemSmallPaused"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:fontFamily="@font/bebas_regular"
            android:text="@string/paused"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="28sp"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_outline_unselected"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/itemLargeTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemLargeName"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="Peanuts"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/itemLargeInStock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:fontFamily="@font/bebas_regular"
                android:text="@string/inStock"
                android:textAlignment="viewEnd"
                android:textColor="#00E432"
                android:textSize="28sp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/itemLargeNeeded"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:fontFamily="@font/bebas_regular"
                android:text="@string/needed"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_red_light"
                android:textSize="28sp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/itemLargePaused"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:fontFamily="@font/bebas_regular"
                android:text="@string/paused"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="28sp"
                app:layout_constraintRight_toRightOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemLargeBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemLargeTop"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemLargeBrandLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:text="@string/brandTypeWithColon"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/itemLargeBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brandTypeWithColon"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemLargeCategoryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:text="@string/categoryWithColon"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/itemLargeCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/categoryWithColon"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>