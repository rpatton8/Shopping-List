<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sortByStoreRvTitle"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@android:color/darker_gray"
    android:orientation="horizontal"
    android:gravity="center"
    android:visibility="visible">

    <ImageView
        android:id="@+id/triangleButtonDown1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/triangle_down"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/triangleDown"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/triangleButtonRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/triangle_right"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/triangleRight"
        android:visibility="gone" />

    <TextView
        android:id="@+id/storeTitleText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/triangleButtonDown2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/triangle_down"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/triangleDown"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/triangleButtonLeft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/triangle_left"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/triangleLeft"
        android:visibility="gone" />

</LinearLayout>