<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".AddStore">

    <TextView
        android:id="@+id/addStoreTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/addStore"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@id/addStoreTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/storeInput"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:translationX="6dp"
                    android:hint="@string/enterStoreName"
                    android:background="@drawable/spinner_outline"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/storeButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/item">

                <Button
                    android:id="@+id/addStoreButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addStore"
                    android:layout_margin="10dp"
                    android:layout_below="@id/store"/>

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_margin="10dp"
                    android:layout_below="@id/store"/>

            </LinearLayout>

            <TextView
                android:layout_width="400dp"
                android:layout_height="200dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>