<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="?android:windowBackground"
    tools:context=".ReorderCategories">

    <TextView
        android:id="@+id/reorderCategories"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/reorderCategories"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reorderCategoriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_below="@id/reorderCategories"
        android:layout_marginTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/reorderCategoriesRecyclerView">

        <Button
            android:id="@+id/finishReorderingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finishReordering"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>